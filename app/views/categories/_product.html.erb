<% if @products.present? %>
	<% @products.each do |product| %>
	  <div class="thumb-con">
	    <input type="hidden" class="cate-id" value="<%= @category.id %>" />
	    <%= link_to image_tag(product.main_product_image.image.url(:middle), class: "image-pos"), product_path(product) %>
	    <span class="thumb-price"><i class="fa fa-jpy fa-lg" aria-hidden="true"><%= product.price %></i></span>
	    <span class="thumb-title"><%= link_to product.title, product_path(product) %></span>
	  </div> 
	<% end %>

<% else %>
	<div class="empty-product">
		<span class="empty-product-t">很抱歉，没有找到您需要的商品。</span>
	</div>
<% end %>