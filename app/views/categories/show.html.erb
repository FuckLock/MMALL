<%= render partial: "welcome/search" %>
<%= render partial: "productlist" %>

<div class="sorter-con">
  <ul>
    <a href="#" class="sorter-a"><li class="sorter-left">推荐排序</li></a>
    <a href="#" class="sorter-b">
      <li class="sorter-right">
        <span class="price">价格</span>
        <i class="fa fa-caret-up"></i>
        <i class="fa fa-caret-down"></i>
      </li>
    </a>
  </ul>

  <% @products.each do |product| %>
  <div class="thumb-con">
    <%= link_to image_tag(product.main_product_image.image.url(:middle), class: "image-pos"), product_path(product) %>
    <span class="thumb-price"><i class="fa fa-jpy fa-lg" aria-hidden="true"><%= product.price %></i></span>
    <span class="thumb-title"><%= link_to product.title, product_path(product) %></span>
  </div> 
  <% end %>
 
</div>


